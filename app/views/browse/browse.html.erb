<ul id="slides">
  <% @users.each_with_index  do |user, i| %>
    <div class="slide <%= 'showing' if i == 0 %>" data-id="<%= user.id %>">
      <div class="image-carousel" style="background-image: url('<%= url_for user.images.first if user.images %>')">

      </div>

      <span class="user-details">
        <span class="user-name"><%= user.first_name %></span>, <small>31</small><br />
        <i class="fa fa-graduation-cap mr-1"></i> Job/Studies <br />
        <i class="fa fa-map-marker mr-3"></i> London
      </span>
    </div>
  <% end %>
</ul>

<div id="slide-control">
  <span class="controls" id="decline"><i class="fa fa-times fa-2x"></i></span>
  <span class="controls" id="approve"><i class="fa fa-heart fa-2x"></i></span>
</div>
